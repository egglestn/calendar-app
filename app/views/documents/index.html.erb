<p id="notice"><%= notice %></p>

<h1><%= Document.model_name.human.pluralize %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("documents.loaded_scope")%></th>
      <th><%= t("documents.loaded_name")%></th>
      <th><%= Document.human_attribute_name("title")%></th>
      <th><%= t("documents.file_name")%></th>
      <th colspan="3"><%= t("views.actions")%></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td>Documentable class name</td>
        <td><%= document.documentable %></td>
        <td><%= document.title %></td>
        <td><a href="<%= document.file.url %>" target="_blank"><%= document.to_s.truncate(50) %></a></td>
        <td><%= link_to t("views.show"), document %></td>
        <td><%= link_to t("views.edit"), edit_document_path(document) %></td>
        <td><%= link_to t("views.destroy"), document, method: :delete, data: { confirm: t("views.sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button><%= t("views.add_type", type: Document.model_name.human.pluralize) %></button>
