<% unless f.object.new_record? %>
  <div class="field">
    <h3>Manage Images</h3>
    <div id="images">
      <%= f.simple_fields_for :images do |image| %>
        <%= render 'image_fields', f: image %>
      <% end %>

      <div class="links">
        <%= link_to_add_association 'add image', f, :images %>
      </div>
    </div>
  </div>

  <br>

<% else %>
  <h3>Manage Images</h3>
  <p> You can add images once this resource has been saved.</p>
<% end %>
