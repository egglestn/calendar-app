<% unless f.object.new_record? %>
  <div class="field">
    <h3><%= t("images.title") %></h3>
    <div id="images">
      <%= f.simple_fields_for :images do |image| %>
        <%= render 'image_fields', f: image %>
      <% end %>

      <div class="links">
        <%= link_to_add_association t("views.add"), f, :images %>
      </div>
    </div>
  </div>

  <br>

<% else %>
  <h3><%= t("images.title") %></h3>
  <p><%= t("images.not_yet") %></p>
<% end %>
