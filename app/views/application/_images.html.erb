<% unless @hide_images_header %>
  <h3>Images</h3>
<% end %>
<table>
  <thead>
    <th>Title</th>
    <th>File</th>
  </thead>
  <tbody>
    <% if !@hide_images_edit_link && imageable.images.count < 1 %>
      <tr>
        <td colspan="2">
          <%= link_to "Add images", edit_path %>
        </td>
      </tr>
    <% end %>

    <% imageable.images.each do |image| %>
      <tr>
        <td><%= image.title %></td>
        <td>
          <%= render 'image', image: image %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
