<!DOCTYPE html>
<html>
  <head>
    <title>HoozziDemo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

    <% if Rails.env.production? %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-86854539-1', 'auto');
      ga('send', 'pageview');
    </script>
    <% end %>
  </head>

  <body>
    <%= render partial: 'components/menu' %>
    <div class="navbar-hoozzi">
      <div class="nav-member">
        <%= image_tag 'logo.png' %>
      </div>
      <div class="nav-member">
        <button id="menu-btn">Menu</button>
      </div>
      <div class="nav-member">
        <nav class="nav-menu">
          <% if current_user %>
          <%= link_to 'Dashboard', root_path, class: "dash-link" %>
          <%= link_to 'Developers', developers_path, class: "dash-link"%>
          <%= link_to 'Developments', developments_path, class: "dash-link" %>
          <%= link_to 'Documents', documents_path, class: "dash-link" %>
          <% unless current_user.owner? %>
            <%= link_to 'Users', users_path, class: "dash-link" %>
          <% end %>

          <%= link_to 'Profile', user_path(current_user), class: "dash-link" %>

          <%= link_to "Sign out (#{current_user})", destroy_user_session_path, method: :delete, class: "dash-link" %>
          <% end %>
        </nav>
      </div>
    </div>

    <% if alert.present? %>
      <p style="background: red; color: #fff; padding: 5px; text-align: center;">
        <%= alert %>
      </p>
    <% end %>

    <% if notice.present? %>
      <p style="background: green; color: #fff; padding: 5px; text-align: center;">
        <%= notice %>
      </p>
    <% end %>

    <%= yield %>
  </body>
</html>
