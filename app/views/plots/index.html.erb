<% breadcrumb :plots, @development, @development.developer %>

<h1><%= @development %> <%= Plot.model_name.human.pluralize %></h1>

<table>
  <thead>
    <tr>
      <th><%= Plot.human_attribute_name("prefix") %></th>
      <th><%= Plot.human_attribute_name("number") %></th>
      <th><%= UnitType.model_name.human %></th>
      <th colspan="3"><%= t("views.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @plots.each do |plot| %>
      <tr>
        <td><%= plot.prefix %></td>
        <td><%= plot.number %></td>
        <td><%= plot.unit_type %></td>
        <td><%= link_to t("views.show"), [@development, plot] %></td>
        <td><%= link_to t("views.edit"), edit_development_plot_path(@development, plot) %></td>
        <td><%= link_to t("views.destroy"), [@development, plot], method: :delete, data: { confirm: t("views.sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("views.add_type", type: Plot.model_name.human), new_development_plot_path(@development) %>
