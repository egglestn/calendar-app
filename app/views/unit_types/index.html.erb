<p id="notice"><%= notice %></p>

<h1><%= @development %>: Unit Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phases</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unit_types.each do |unit_type| %>
      <tr>
        <td><%= unit_type.name %></td>
        <td><%= unit_type.phases.pluck(:name).to_sentence %></td>
        <td>
          <% unit_type.images.each do |image| %>
            <%= render 'image', image: image %>
          <% end %>
        </td>
        <td><%= link_to 'Show', [@development, unit_type] %></td>
        <td><%= link_to 'Edit', edit_development_unit_type_path(@development, unit_type) %></td>
        <td><%= link_to 'Destroy', [@development, unit_type], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Unit Type', new_development_unit_type_path(@development) %>
