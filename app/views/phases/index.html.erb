<p id="notice"><%= notice %></p>

<h1><%= @development %>: Phases</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Development</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phases.each do |phase| %>
      <tr>
        <td><%= phase.name %></td>
        <td><%= phase.development %></td>
        <td><%= link_to 'Show', [@development, phase] %></td>
        <td><%= link_to 'Edit', edit_development_phase_path(@development, phase) %></td>
        <td><%= link_to 'Destroy', [@development, phase], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Phase', new_development_phase_path(@development) %>