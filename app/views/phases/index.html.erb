<h1><%= Phase.model_name.human.pluralize %></h1>

<table>
  <thead>
    <tr>
      <th><%= Phase.human_attribute_name("name") %></th>
      <th><%= Phase.model_name.human %></th>
      <th colspan="3"><%= t("views.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @phases.each do |phase| %>
      <tr>
        <td><%= phase.name %></td>
        <td><%= phase.development %></td>
        <td><%= link_to t("views.show"), [@development, phase] %></td>
        <td><%= link_to t("views.edit"), edit_development_phase_path(@development, phase) %></td>
        <td><%= link_to t("views.destroy"), [@development, phase], method: :delete, data: { confirm: t("views.sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("views.add_type", type: Phase.model_name.human), new_development_phase_path(@development) %>