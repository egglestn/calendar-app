<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Development name</th>
      <th>Developer</th>
      <th>Office address</th>
      <th>City</th>
      <th>County</th>
      <th>Postcode</th>
      <th>Email</th>
      <th>Contact number</th>
      <th colspan="7">Links</th>
    </tr>
  </thead>

  <tbody>
    <% developments.each do |development| %>
      <tr>
        <td><%= development.development_name %></td>
        <td><%= development.developer %></td>
        <td><%= development.office_address %></td>
        <td><%= development.city %></td>
        <td><%= development.county %></td>
        <td><%= development.postcode %></td>
        <td><%= development.email %></td>
        <td><%= development.contact_number %></td>
        <td><%= link_to_unless cannot?(:read, Phase), 'Phases', development_phases_path(development) %></td>
        <td><%= link_to_unless cannot?(:read, UnitType), 'Unit Types', development_unit_types_path(development) %></td>
        <td><%= link_to_unless cannot?(:read, Room), 'Rooms', development_rooms_path(development) %></td>
        <td><%= link_to_unless cannot?(:read, Plot), 'Plots', development_plots_path(development) %></td>
        <td><%= link_to_unless cannot?(:read, development), 'Show', polymorphic_url([parent, development]) %></td>
        <td><%= link_to_unless cannot?(:edit, development), 'Edit', edit_polymorphic_url([parent, development]) %></td>
        <td><%= link_to_unless cannot?(:destroy, development), 'Destroy', polymorphic_url([parent, development]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
