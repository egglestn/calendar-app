<%= form_for(developer) do |f| %>
  <% if developer.errors.any? %>
    <div id="error_explanation">
      <h2><%= t("views.need_fix") %><%= pluralize(developer.errors.count, "error") %></h2>
      <ul>
      <% developer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label Developer.human_attribute_name("company_name") %>
    <%= f.text_field :company_name %>
  </div>

  <div class="field">
    <%= f.label Developer.human_attribute_name("head_office_address") %>
    <%= f.text_field :head_office_address %>
  </div>

  <div class="field">
    <%= f.label Developer.human_attribute_name("city") %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label Developer.human_attribute_name("county") %>
    <%= f.text_field :county %>
  </div>

  <div class="field">
    <%= f.label Developer.human_attribute_name("postcode") %>
    <%= f.text_field :postcode %>
  </div>

  <div class="field">
    <%= f.label Developer.human_attribute_name("email") %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label Developer.human_attribute_name("contact_number") %>
    <%= f.text_field :contact_number %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
