  <li><%= link_to Division.model_name.human.pluralize, developer_divisions_path(@developer) %></li>
  <li><%= link_to Development.model_name.human.pluralize, developer_developments_path(@developer) %></li>
</ul>

<p>
  <strong><%= Developer.human_attribute_name("head_office_address") %></strong>
