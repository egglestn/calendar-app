<h1><%= User.model_name.human.pluralize %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name("first_name") %></th>
      <th><%= User.human_attribute_name("last_name") %></th>
      <th><%= User.human_attribute_name("role") %></th>
      <th colspan="3"><%= t("views.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.role %></td>
        <td><%= link_to t("views.show"), user %></td>
        <td><%= link_to t("views.edit"), edit_user_path(user) %></td>
        <td><%= link_to t("views.destroy"), user, method: :delete, data: { confirm: t("views.sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("views.add_type", type: User.model_name.human), new_user_path %>
