<p id="notice"><%= notice %></p>

<h1><%= @developer %> Divisions</h1>

<table>
  <thead>
    <tr>
      <th>Division name</th>
      <th>Address</th>
      <th>City</th>
      <th>County</th>
      <th>Postcode</th>
      <th>Email</th>
      <th>Contact number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @divisions.each do |division| %>
      <tr>
        <td><%= division.division_name %></td>
        <td><%= division.address %></td>
        <td><%= division.city %></td>
        <td><%= division.county %></td>
        <td><%= division.postcode %></td>
        <td><%= division.email %></td>
        <td><%= division.contact_number %></td>
        <td><%= link_to 'Developments', division_developments_path(division) %></td>
        <td><%= link_to 'Show', [@developer, division] %></td>
        <td><%= link_to 'Edit', edit_developer_division_path(@developer, division) %></td>
        <td><%= link_to 'Destroy', [@developer, division], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Division', new_developer_division_path(@developer) %> |
<%= link_to 'Developer', developer_path(@developer) %>
