<% breadcrumb :divisions, @developer %>

<h1><%= @developer %> <%= Division.model_name.human.pluralize %></h1>

<table>
  <thead>
    <tr>
      <th><%= Division.human_attribute_name("name") %></th>
      <th><%= Division.human_attribute_name("address") %></th>
      <th><%= Division.human_attribute_name("city") %></th>
      <th><%= Division.human_attribute_name("county") %></th>
      <th><%= Division.human_attribute_name("postcode") %></th>
      <th><%= Division.human_attribute_name("email") %></th>
      <th><%= Division.human_attribute_name("contact_number") %></th>
      <th><%= t("views.links")%></th>
      <th colspan="3"><%= t("views.actions")%></th>
    </tr>
  </thead>

  <tbody>
    <% @divisions.each do |division| %>
      <tr>
        <td><%= division.division_name %></td>
        <td><%= division.address %></td>
        <td><%= division.city %></td>
        <td><%= division.county %></td>
        <td><%= division.postcode %></td>
        <td><%= division.email %></td>
        <td><%= division.contact_number %></td>
        <td><%= link_to Development.model_name.human.pluralize, division_developments_path(division) %></td>
        <td><%= link_to t("views.show"), [@developer, division] %></td>
        <td><%= link_to t("views.edit"), edit_developer_division_path(@developer, division) %></td>
        <td><%= link_to t("views.destroy"), [@developer, division], method: :delete, data: { confirm: t("views.confirm_text") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("views.add_type", type: Division.model_name.human), new_developer_division_path(@developer) %> |
<%= link_to Developer.model_name.human, developer_path(@developer) %>
