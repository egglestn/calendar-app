<% breadcrumb :samples %>

<h1>Samples</h1>

<table>
  <thead>
    <tr>
      <th><%= Sample.human_attribute_name("name") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @samples.each do |sample| %>
      <%= content_tag(:tr, data_to_delete(sample)) do %>
        <tr>
          <td><%= sample.name %></td>
          <td><%= link_to 'Show', sample %></td>
          <td><%= link_to 'Edit', edit_sample_path(sample) %></td>
          <td><%= button_tag "", name: "delete", 'aria-label': t("views.destroy"), class: "archive-btn fa fa-trash"%></td>
        </tr>
      <% end %>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sample', new_sample_path %>

<div class="paging">
  <%= render 'components/page_size' %>
  <%= paginate @samples %>
</div>
