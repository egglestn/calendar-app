<div class="navbar">
  <label class="navbar-trigger-label" for="navbar-trigger">
    <%= fa_icon "bars" %>
  </label>
  <input id="navbar-trigger" type="checkbox">
  <nav class="navbar-menu">
    <% if current_user %>
      <%= navigation_link(root_path, "tachometer", "Dashboard", "navbar-link") %>
      <%= navigation_link(developers_path, "vcard", "Developers", "navbar-link") %>
      <%= navigation_link(developments_path, "building", "Developments", "navbar-link") %>
      <%= navigation_link(documents_path, "file", "Documents", "navbar-link") %>

      <% unless current_user.owner? %>
        <%= navigation_link(users_path, "users", "Users", "navbar-link") %>
      <% end %>

      <%= navigation_link(user_path(current_user), "user", "Profile", "navbar-link") %>

      <div class="navbar-item">
        <%= link_to destroy_user_session_path, method: :delete, class: "navbar-link" do %>
          <%= fa_icon "sign-out" %>
          Sign Out
        <% end %>
      </div>
    <% end %>
  </nav>
</div>
